<h1>Edit this course {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
	<div class="input-field">
		<input id="title" type="text" class="validate" name="title" required value="{{course.title}}">
		<label for="title">Name of the course</label>
		<span class="helper-text" data-error="enter name"></span>
	</div>
	<div class="input-field">
		<input id="price" type="number" class="validate" name="price" required min="100" value="{{course.price}}">
		<label for="price">Price</label>
		<span class="helper-text" data-error="enter the price"></span>
	</div>
	<div class="input-field">
		<input id="img" type="text" class="validate" name="img" value="{{course.img}}">
		<label for="img">Image</label>
		<span class="helper-text" data-error="enter url of the picture"></span>
	</div>
	<input type="hidden" name="id" value={{course.id}}>

	<input type="hidden" name="_csrf" value={{csrf}}>
	<button type="submit" class="btn btn-primary">Edit {{course.title}}</button>
</form>

<form action="/courses/remove" method="POST">
	<input type="hidden" name="id" value="{{course.id}}">
	<input type="hidden" name="_csrf" value={{csrf}}>
	<button class="btn red">Delete {{course.title}}</button>
</form>
