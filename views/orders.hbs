<h1>My orders</h1>
{{#if orders.length}}
{{#each orders}}
<div class="row">
	<div class="col s6 offset-s3">
		<div class="card">
			<div class="card-content">
				<h1 class="card-title">
					Order <small>{{_id}}</small>
				</h1>
				<p class="date">Date :{{date}}</p>
				<p><em>{{user.userId.name}}</em> {{user.userId.email}}</p>

				<ol>
					{{#each courses}}
					<li>
						{{course.title}} (x <strong>{{count}}</strong> )
					</li>
					{{/each}}
				</ol>
				<hr>
				<p>Total <span class="price">{{price}}</span></p>
			</div>
		</div>
	</div>
</div>
{{/each}}
{{else}}
<p>There are nothing orders</p>

{{/if}}
