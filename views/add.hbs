<h1>Add course</h1>

<form action="/add" method="POST">
	<div class="input-field">
		<input id="title" type="text" class="validate" name="title" required>
		<label for="title">Name of the course</label>
		<span class="helper-text" data-error="enter name"></span>
	</div>
	<div class="input-field">
		<input id="price" type="number" class="validate" name="price" required min="100">
		<label for="price">Price</label>
		<span class="helper-text" data-error="enter the price"></span>
	</div>
	<div class="input-field">
		<input id="img" type="text" class="validate" name="img">
		<label for="img">Image</label>
		<span class="helper-text" data-error="enter url of the picture"></span>
	</div>
	<button class="btn btn-primary">Add the course</button>
</form>
