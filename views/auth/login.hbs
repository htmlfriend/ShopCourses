<div class="auth">
	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s6"><a class="active" href="#login">Enter</a></li>
				<li class="tab col s6"><a href="#register">Register</a></li>
			</ul>
		</div>
		<div id="login" class="col s6 offset-s3">

			{{#if loginError}}
			<p class="alert">{{loginError}}</p>
			{{/if}}

			<h1>Enter in the shop</h1>
			<form action="/auth/login" method="POST">
				<div class="input-field">
					<input id="email" type="email" class="validate" name="email" required>
					<label for="email">Email</label>
					<span class="helper-text" data-error="enter email"></span>
				</div>
				<div class="input-field">
					<input id="password" type="password" class="validate" name="password" required>
					<label for="password">Password</label>
					<span class="helper-text" data-error="enter password"></span>
				</div>
				<input type="hidden" name="_csrf" value={{csrf}}>
				<button class="btn btn-primary" type="submit">Log in</button>
			</form>
		</div>
		<div id="register" class="col s6 offset-s3">

			{{#if registerError}}
			<p class="alert">{{registerError}}</p>
			{{/if}}

			<h1>Create account</h1>
			<form action="/auth/register" method="POST">
				<div class="input-field">
					<input id="name" type="text" class="validate" name="name" required>
					<label for="name">Your name</label>
					<span class="helper-text" data-error="enter your name"></span>
				</div>
				<div class="input-field">
					<input id="remail" type="email" class="validate" name="email" required>
					<label for="remail">Email</label>
					<span class="helper-text" data-error="enter email"></span>
				</div>
				<div class="input-field">
					<input id="rpassword" type="password" class="validate" name="password" required>
					<label for="rpassword">Password</label>
					<span class="helper-text" data-error="enter password"></span>
				</div>
				<div class="input-field">
					<input id="confirm" type="password" class="validate" name="confirm" required>
					<label for="confirm">Repeat password</label>
					<span class="helper-text" data-error="repeat password"></span>
				</div>

				<input type="hidden" name="_csrf" value={{csrf}}>
				<button class="btn btn-primary" type="submit">Registration</button>
			</form>
		</div>
	</div>
</div>
